

package main
import(
    "fmt"
)
func main() {
    var numDays, day, people, cumulative int
    fmt.Scanln(&numDays)
    
    if numDays==1 {
        fmt.Println("2")
    }else {
        day=1
        people=5
        cumulative=2
        
        for ; day<numDays; day++ {
            people/=2
            people*=3
            cumulative += people/2
        }
        fmt.Println(cumulative)
    }
}
