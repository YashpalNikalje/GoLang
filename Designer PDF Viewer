

package main
import(
    "fmt"
    "bufio"
    "os"
)
func main() {
     io:= bufio.NewReader(os.Stdin)
      h:= make([]int, 26)
      for i:=0; i<26; i++ {
          fmt.Fscan(io, &h[i])
      }
      var word string
      fmt.Fscan(io, &word)
      max:=0
      for i:=0; i<len(word); i++ {
          l:= word[i] - 'a'
          if h[l] > max {
              max= h[l]
          }
      }
      fmt.Println(max* len(word))
}
